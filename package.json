{
	"name": "formsmd",
	"version": "1.1.3",
	"description": "Developer-first, open source Typeform alternative",
	"main": "src/index.js",
	"types": "types/index.d.ts",
	"scripts": {
		"dev": "concurrently -k -n assets,site,serve -c yellow,magenta,cyan \"npm:dev:watch\" \"npm:dev:site:watch\" \"npm:dev:serve\"",
		"dev:watch": "webpack --config webpack.config.js --watch --mode=development",
		"dev:site": "node ./bin/index.js -i demo -o site",
		"dev:site:watch": "chokidar \"demo/**/*.md\" \"demo/base.html\" \"dist/**/*\" -c \"npm run dev:site\" --initial",
		"dev:serve": "serve site -l 3001 --no-port-switching",
		"build": "rtlcss dist/css/formsmd.css dist/css/formsmd.rtl.css && tsc && npm run lint && npm run format && csso dist/css/formsmd.css -o dist/css/formsmd.min.css -s file && csso dist/css/formsmd.rtl.css -o dist/css/formsmd.rtl.min.css -s file && webpack --config webpack.config.js && npx babel dist/js/formsmd.bundle.min.js -o dist/js/formsmd.bundle.min.js && terser dist/js/formsmd.bundle.min.js -o dist/js/formsmd.bundle.min.js && npx babel dist/js/composer.bundle.min.js -o dist/js/composer.bundle.min.js && terser dist/js/composer.bundle.min.js -o dist/js/composer.bundle.min.js",
		"vercel-build": "npm run build && rm -rf public && cp -R site public",
		"format": "npx prettier . --write",
		"lint": "eslint bin/ --fix && eslint google-apps-script/ --fix && eslint src/ --fix && eslint tests/ --fix",
		"test": "jest --runInBand",
		"webpack": "webpack --config webpack.config.js"
	},
	"bin": {
		"formsmd": "./bin/index.js"
	},
	"keywords": [
		"accessibility",
		"blog",
		"form",
		"form-builder",
		"form builder",
		"google-sheets",
		"google sheets",
		"markdown",
		"slides",
		"ssg",
		"static-site-generator",
		"static site generator",
		"typeform",
		"typeform-clone"
	],
	"author": "Tahmid Khan Nafee",
	"license": "Apache-2.0",
	"devDependencies": {
		"@babel/cli": "^7.24.7",
		"@babel/core": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@eslint/js": "^9.14.0",
		"beautify": "^0.0.8",
		"chokidar-cli": "^3.0.0",
		"concurrently": "^9.2.1",
		"csso-cli": "^4.0.2",
		"eslint": "^9.14.0",
		"fs-extra": "^11.2.0",
		"globals": "^15.12.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "^3.2.5",
		"rtlcss": "^4.1.1",
		"serve": "^14.2.5",
		"terser": "^5.30.4",
		"typescript": "^5.4.2",
		"webpack": "^5.90.3",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"dompurify": "^3.2.4",
		"highlight.js": "^11.9.0",
		"marked": "^12.0.1",
		"nunjucks": "^3.2.4",
		"slugify": "^1.6.6",
		"yargs": "^17.7.2"
	},
	"prettier": {
		"useTabs": true,
		"quoteProps": "consistent"
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"jest": {
		"testEnvironment": "jsdom"
	}
}
